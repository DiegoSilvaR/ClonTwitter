<h1>Tweets</h1>

<%= form_tag(tweets_path, method: "get", class: "mb-4") do %>
  <%= text_field_tag(:search, params[:search], placeholder: "Buscar tweets...") %>
  <%= submit_tag("Buscar", class: "btn btn-primary") %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.description %></td>
        <td><%= tweet.userName %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New tweet", new_tweet_path %>
<%= will_paginate @tweets, class: "pagination justify-content-center" %>




